<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ui.auth.signin.SigninFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFF"
            android:layout_marginTop="24dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:paddingTop="26dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivProfile"
                android:layout_gravity="center"
                android:src="@drawable/ic_picture_empty"
                android:layout_width="110dp"
                android:layout_height="110dp"/>

            <TextView
                android:layout_marginTop="16dp"
                style="@style/TextView.PoppinsSignin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Full Name"/>

            <EditText
                android:id="@+id/etFullname"
                style="@style/EditText.PoppinsSignin"
                android:layout_marginTop="6dp"
                android:padding="10dp"
                android:background="@drawable/shape_rectangle_outline_8_020202"
                android:hint="Type Your full name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="16dp"
                style="@style/TextView.PoppinsSignin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email Address" />

            <EditText
                android:id="@+id/etEmail"
                style="@style/EditText.PoppinsSignin"
                android:layout_marginTop="6dp"
                android:padding="10dp"
                android:background="@drawable/shape_rectangle_outline_8_020202"
                android:hint="Type Your email address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="16dp"
                style="@style/TextView.PoppinsSignin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Password" />

            <EditText
                android:id="@+id/etPassword"
                style="@style/EditText.PoppinsSignin"
                android:inputType="textPassword"
                android:layout_marginTop="6dp"
                android:padding="10dp"
                android:background="@drawable/shape_rectangle_outline_8_020202"
                android:hint="Type Your password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/btnContinue"
                style="@style/Button.Primary"
                android:textAllCaps="false"
                android:layout_marginTop="24dp"
                android:text="Continue"
                android:textColor="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

</androidx.core.widget.NestedScrollView>