<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ui.auth.signin.SigninFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFF"
            android:layout_marginTop="24dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:paddingTop="26dp"
            android:orientation="vertical">



            <TextView
                style="@style/TextView.PoppinsSignin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phone No." />

            <EditText
                android:id="@+id/etPhoneNumber"
                style="@style/EditText.PoppinsSignin"
                android:layout_marginTop="6dp"
                android:padding="10dp"
                android:background="@drawable/shape_rectangle_outline_8_020202"
                android:hint="Type Your phone number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="16dp"
                style="@style/TextView.PoppinsSignin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Address" />

            <EditText
                android:id="@+id/etAddress"
                style="@style/EditText.PoppinsSignin"
                android:layout_marginTop="6dp"
                android:padding="10dp"
                android:background="@drawable/shape_rectangle_outline_8_020202"
                android:hint="Type Your address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="16dp"
                style="@style/TextView.PoppinsSignin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="House No." />

            <EditText
                android:id="@+id/etHouseNumber"
                style="@style/EditText.PoppinsSignin"
                android:layout_marginTop="6dp"
                android:padding="10dp"
                android:background="@drawable/shape_rectangle_outline_8_020202"
                android:hint="Type Your house no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="16dp"
                style="@style/TextView.PoppinsSignin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="City" />

            <EditText
                android:id="@+id/etCity"
                style="@style/EditText.PoppinsSignin"
                android:layout_marginTop="6dp"
                android:padding="10dp"
                android:background="@drawable/shape_rectangle_outline_8_020202"
                android:hint="Type Your City"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/btnSignUpNow"
                style="@style/Button.Primary"
                android:textAllCaps="false"
                android:layout_marginTop="24dp"
                android:text="Sign Up Now"
                android:textColor="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

</androidx.core.widget.NestedScrollView>