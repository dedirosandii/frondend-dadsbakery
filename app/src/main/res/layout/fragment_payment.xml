<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.detail.PaymentFragment">

   <androidx.constraintlayout.widget.ConstraintLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">

       <androidx.constraintlayout.widget.ConstraintLayout
           android:id="@+id/constrantLayout"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="@drawable/shape_rectangle_8_fff"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintHorizontal_bias="0.0"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toTopOf="parent">

           <TextView
               android:id="@+id/textView2"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               style="@style/EditText.PoppinsSigninhitam"
               android:layout_marginStart="24dp"
               android:layout_marginTop="16dp"
               android:text="Item Ordered"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent" />

           <ImageView
               android:id="@+id/ivPoster"
               android:layout_width="60dp"
               android:layout_height="60dp"
               android:layout_marginTop="12dp"
               android:layout_marginStart="24dp"
               android:scaleType="centerCrop"
               android:src="@drawable/iv_sample_product"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/textView2" />

           <TextView
               android:id="@+id/textView5"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginStart="24dp"
               android:layout_marginTop="16dp"
               style="@style/EditText.PoppinsSigninhitam"
               android:text="Details Transaction"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/ivPoster" />

           <TextView
               android:id="@+id/tvNameItem"
               style="@style/TextView.PoppinsToolBarSub"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginStart="24dp"
               android:layout_marginTop="8dp"
               android:text="Cherry Health"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/textView5" />

           <TextView
               android:id="@+id/textView10"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               style="@style/TextView.PoppinsToolBarSub"
               android:layout_marginStart="24dp"
               android:layout_marginTop="8dp"
               android:text="Driver"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/tvNameItem" />

           <TextView
               android:id="@+id/textView11"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               style="@style/TextView.PoppinsToolBarSub"
               android:layout_marginStart="24dp"
               android:layout_marginTop="8dp"
               android:text="Tax 10%"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/textView10" />


           <TextView
               android:id="@+id/textView15"
               style="@style/TextView.PoppinsToolBarSub"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginStart="24dp"
               android:layout_marginTop="8dp"
               android:layout_marginBottom="16dp"
               android:text="Total Price"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/textView11" />

           <TextView
               android:id="@+id/tvTitle"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginStart="12dp"
               android:layout_marginTop="20dp"
               style="@style/TextView.PoppinsSignin"
               android:text="Cherry Health"
               app:layout_constraintStart_toEndOf="@+id/ivPoster"
               app:layout_constraintTop_toBottomOf="@+id/textView2" />

           <TextView
               android:id="@+id/tvPrice"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               style="@style/EditText.PoppinsSigninhitam"
               android:layout_marginStart="12dp"
               android:layout_marginTop="4dp"
               android:text="IDR 28.000"
               app:layout_constraintStart_toEndOf="@+id/ivPoster"
               app:layout_constraintTop_toBottomOf="@+id/tvTitle" />


           <TextView
               android:id="@+id/tvHarga"
               style="@style/EditText.PoppinsSigninhitam"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="8dp"
               android:layout_marginEnd="24dp"
               android:text="IDR. 18.000"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/textView5" />

           <TextView
               android:id="@+id/textView17"
               style="@style/EditText.PoppinsSigninhitam"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="8dp"
               android:layout_marginEnd="24dp"
               android:text="IDR 5.000"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/tvHarga" />

           <TextView
               android:id="@+id/tvTax"
               style="@style/EditText.PoppinsSigninhitam"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="8dp"
               android:layout_marginEnd="24dp"
               android:text="IDR 45.000"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/textView17" />

           <TextView
               android:id="@+id/tvTotal"
               style="@style/EditText.PoppinsSigninhijau"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="8dp"
               android:layout_marginEnd="24dp"
               android:text="IDR 45.000"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/tvTax" />


       </androidx.constraintlayout.widget.ConstraintLayout>

       <androidx.constraintlayout.widget.ConstraintLayout
           android:id="@+id/constrantLayout2"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="24dp"
           android:background="@drawable/shape_rectangle_8_fff"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toBottomOf="@+id/constrantLayout">




           <TextView
               android:id="@+id/textView31"
               style="@style/EditText.PoppinsSigninhitam"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginStart="24dp"
               android:layout_marginTop="16dp"
               android:text="Deliver to :"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent" />

           <TextView
               android:id="@+id/textView32"
               style="@style/EditText.PoppinsSignin"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginStart="24dp"
               android:layout_marginTop="8dp"
               android:text="Name"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/textView31" />

           <TextView
               android:id="@+id/textView33"
               style="@style/EditText.PoppinsSignin"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginStart="24dp"
               android:layout_marginTop="8dp"
               android:text="Phone No"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/textView32" />

           <TextView
               android:id="@+id/textView34"
               style="@style/EditText.PoppinsSignin"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginStart="24dp"
               android:layout_marginTop="8dp"
               android:text="Address"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/textView33" />


           <TextView
               android:id="@+id/textView38"
               style="@style/EditText.PoppinsSignin"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginStart="24dp"
               android:layout_marginTop="8dp"
               android:layout_marginBottom="8dp"
               android:text="House No."
               app:layout_constraintBottom_toTopOf="@+id/textView35"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/textView34" />

           <TextView
               android:id="@+id/textView35"
               style="@style/EditText.PoppinsSignin"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginStart="24dp"
               android:layout_marginTop="8dp"
               android:layout_marginBottom="16dp"
               android:text="City"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/textView34" />

           

           <TextView
               android:id="@+id/tvName"
               style="@style/EditText.PoppinsSigninhitam"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="8dp"
               android:layout_marginEnd="24dp"
               android:text="Irfan Darmawan"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/textView31" />

           <TextView
               android:id="@+id/tvPhoneno"
               style="@style/EditText.PoppinsSigninhitam"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="8dp"
               android:layout_marginEnd="24dp"
               android:text="0856 9228 84842"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/tvName" />

           <TextView
               android:id="@+id/tvAddress"
               style="@style/EditText.PoppinsSigninhitam"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="8dp"
               android:layout_marginEnd="24dp"
               android:text="Jl. Tanah Baru"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/tvPhoneno" />


           <TextView
               android:id="@+id/tvHouseNo"
               style="@style/EditText.PoppinsSigninhitam"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="8dp"
               android:layout_marginEnd="24dp"
               android:text="A5 Hook"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/tvAddress" />

           <TextView
               android:id="@+id/tvCity"
               style="@style/EditText.PoppinsSigninhitam"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="8dp"
               android:layout_marginEnd="24dp"
               android:text="Depok"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/tvHouseNo" />

       </androidx.constraintlayout.widget.ConstraintLayout>

       <Button
           android:id="@+id/btnCheckout"
           style="@style/Button.Primary"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_marginStart="24dp"
           android:layout_marginTop="24dp"
           android:layout_marginEnd="24dp"
           android:layout_marginBottom="24dp"
           android:text="Checkout Now"
           android:textAllCaps="false"
           android:textColor="#ffffff"
           app:layout_constraintBottom_toBottomOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toBottomOf="@+id/constrantLayout2" />

   </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>